<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

        <property name="autoIncrement" value="true"/>

    <!--
        Added the entity Item.
    -->
    <changeSet id="20200102134904-1" author="jhipster">
        <createTable tableName="item">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="company_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="code" type="varchar(20)">
                <constraints nullable="true" />
            </column>
            <column name="name" type="varchar(150)">
                <constraints nullable="false" />
            </column>
            <column name="description" type="varchar(200)">
                <constraints nullable="true" />
            </column>
            <column name="type" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="sku_num" type="decimal(21,2)">
                <constraints nullable="true" />
            </column>
            <column name="vat_tax" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="import_tax" type="decimal(21,2)">
                <constraints nullable="true" />
            </column>
            <column name="export_tax" type="decimal(21,2)">
                <constraints nullable="true" />
            </column>
            <column name="inventory_price_method" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="account_item" type="varchar(10)">
                <constraints nullable="true" />
            </column>
            <column name="is_allow_modified" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="account_cost" type="varchar(10)">
                <constraints nullable="true" />
            </column>
            <column name="account_revenue" type="varchar(10)">
                <constraints nullable="true" />
            </column>
            <column name="account_internal_revenue" type="varchar(10)">
                <constraints nullable="true" />
            </column>
            <column name="account_sale_return" type="varchar(10)">
                <constraints nullable="true" />
            </column>
            <column name="account_sale_price" type="varchar(10)">
                <constraints nullable="true" />
            </column>
            <column name="account_agency" type="varchar(10)">
                <constraints nullable="true" />
            </column>
            <column name="account_raw_product" type="varchar(10)">
                <constraints nullable="true" />
            </column>
            <column name="account_cost_difference" type="varchar(10)">
                <constraints nullable="true" />
            </column>
            <column name="account_discount" type="varchar(10)">
                <constraints nullable="true" />
            </column>
            <column name="sale_desc" type="varchar(100)">
                <constraints nullable="true" />
            </column>
            <column name="purchase_desc" type="varchar(100)">
                <constraints nullable="true" />
            </column>
            <column name="weight" type="double">
                <constraints nullable="true" />
            </column>
            <column name="lenght" type="double">
                <constraints nullable="true" />
            </column>
            <column name="wide" type="double">
                <constraints nullable="true" />
            </column>
            <column name="height" type="double">
                <constraints nullable="true" />
            </column>
            <column name="color" type="varchar(50)">
                <constraints nullable="true" />
            </column>
            <column name="specification" type="varchar(300)">
                <constraints nullable="true" />
            </column>
            <column name="item_image" type="longblob">
                <constraints nullable="true" />
            </column>
            <column name="item_image_content_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="is_active" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="time_created" type="datetime">
                <constraints nullable="true" />
            </column>
            <column name="time_modified" type="datetime">
                <constraints nullable="true" />
            </column>
            <column name="user_id_created" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="user_id_modified" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="unit_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="item_group_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="store_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="item" columnName="time_created" columnDataType="datetime"/>
        <dropDefaultValue tableName="item" columnName="time_modified" columnDataType="datetime"/>
    </changeSet>

    <changeSet id="20200102134904-1-relations" author="jhipster">

    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->

