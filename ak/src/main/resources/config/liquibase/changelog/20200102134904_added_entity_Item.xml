            <column name="purchase_desc" type="string"/>
            <column name="weight" type="numeric"/>
            <column name="lenght" type="numeric"/>
            <column name="wide" type="numeric"/>
            <column name="height" type="numeric"/>
            <column name="color" type="string"/>
            <column name="specification" type="string"/>
            <column name="item_image" type="blob"/>
